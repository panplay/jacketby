<div class="col-md-12">
	<h2>カテゴリー一覧</h2>
	<table class="table table-striped">
    <thead>
  	 <tr>
  		<th>カテゴリー名</th>
  		<th colspan="3"></th>
  		<th colspan="3"></th>
  	 </tr>
    </thead>
    <tbody>
	<% @categories.each do |category| %>
  <%= form_for(category, url: admin_category_path(category)) do |f| %>
	 <tr>
	 	<td><%= f.text_field :name, class:"form-control" %></td>
    <td><%= f.submit "保存" %></td>
     <% end %>
	 	<td><%= link_to "削除", admin_categories_hide_path(category), method: :put %></td>
	 </tr>
	 <% end %>
   </tbody>
   </table>
   <hr>

   <h2>カテゴリー新規作成</h2>
   <%= form_for(@category, url: admin_categories_path) do |f| %>
   <%= f.text_field :name %>
	<%= f.submit "新規作成", class:"btn btn-lg btn-block btn-base-1 mt-20 bg-primary" %>
	<% end %>
</div>