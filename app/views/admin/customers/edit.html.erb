<h2>顧客情報
 <span class="fa fa-user form-control-icon" aria-hidden="true"></span></h2>

      <%= form_for @customer,:url => {:action => :update} do |f| %>
    <div class="field">
      <label>お名前</label>
        <%= f.text_field :last_name,id:"customer_last_name",placeholder:"名前"%>
        <%= f.text_field :first_name,id:"customer_first_name",placeholder:"名前"%>
    </div>
    <div class="field">
      <label>お名前（カナ）</label>
      <%= f.text_field :last_name_kana,id:"customer_last_name_kana",placeholder:"名前（カナ）"%>
      <%= f.text_field :first_name_kana,id:"customer_first_name_kana",placeholder:"名前（カナ）"%>
    </div>
    <div class="field">
      <label>住所1</label>
      <%= f.text_field :postal_code,id:"customer_postal_code",placeholder:"郵便番号"%>
      <%= f.text_field :address,id:"customer_adress",placeholder:"住所1"%>
    </div>
    <div class="field">
    　<label>電話番号</label>
      <%= f.text_field :phone_number,id:"customer_phone_number",placeholder:"電話番号"%>
    </div>
    <div class="field">
    　<label>メールアドレス</label>
      <%= f.text_field :email,id:"customer_email",placeholder:"メールアドレス"%>
    <div class="actions">
    <%= f.submit "Update customer", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
        <% end %>
    </div>

