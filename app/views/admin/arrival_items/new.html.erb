<h2>入荷入力画面</h2>
<table  class="table table-hover table-inverse">
	<thead>
		<tr>
			<th class="">#</th>
			<th class="">シングル/アルバム名</th>
			<th class="">アーティスト名</th>
			<th class="">入荷枚数</th>
			<th class="">入荷日時</th>
			<th class=""></th>
		</tr>
	</thead>
	<tbody>
		<tr>
			<% @item.each do |item| %>
				<td>
				</td>
				<td>
					<%= item.name %>
				</td>
				<td>
					<%= item.artist.name %>
				</td>
				<td>
					<%= form_for [item, @arrival_item], url: admin_arrival_items_path, html: {method: "post"} do |f| %>
					<%= f.number_field :arrival_count, class:"form-control" %>
				</td>
				<td>
					<%= f.date_field :arrival_time, class:"form-control" %>
					<%= f.hidden_field :item_id, :value => item.id, class:"form-control" %>
				</td>
				<td>
					<%= f.submit "保存" %>
					<% end %>
				</td>
			<% end %>
		</tr>
	</tbody>
</table>