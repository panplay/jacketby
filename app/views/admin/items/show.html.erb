<div class="show-content">
<section class="container-fluid clearfix">
	<h1 class="text-center">商品詳細</h1>
		<div class="row">
			<div class="col-md-8 col-sm-offset-2 show-container">
				<div class="row clearfix">
					<div class="col-md-6">
						<div class="item_show">
							<div class="item_show_image">
								<%= attachment_image_tag @item, :image, size: "300x300", class: "center-block" %>
							</div>
						</div>
					</div>

					<div class="col-md-6">
						<table class="table table-striped">
							<thead>
								<tr>
									<th>シングルアルバム名</th>
									<th><%= @item.name %></th>
								</tr>
								<tr>
									<th>アーティスト名</th>
									<th><%= @item.artist.name %></th>
								</tr>
								<tr>
									<th>価格(税込)</th>
									<th>¥ <%= (@item.price * 1.1).to_i %>
										<% if @item.sale == "好評発売中" %>
				  							<span class="btn btn-info btn-xs">好評発売中</span>
				  						<% elsif @item.sale == "販売停止中" %>
				  							<span class="btn btn-warning btn-xs">販売停止中</span>
				  						<% else %>
				  							<span class="btn btn-danger btn-xs">sale</span>
				  						<% end %>
									</th>
								</tr>
								<tr>
									<th>発売日</th>
									<th><%= @item.release_date.strftime("%Y年%m月%d日 ") %></th>
								</tr>
								<tr>
									<th>レーベル名</th>
									<th><%= @item.label.name %></th>
								</tr>
								<tr>
									<th>カテゴリー名</th>
									<th><%= @item.category.name %></th>
								</tr>
								<tr>
									<th>在庫</th>
									<th><% if @item.stock == 0 %>
				  							<p class="btn btn-danger btn-xs">在庫なし</p>
				  						<% elsif @item.stock <= 5 %>
				  							<p class="btn btn-warning btn-xs">残り在庫<%= @item.stock %>ケ</p>
				  						<% else %>
				  							<p class="btn btn-success btn-xs">在庫あり</p>
				  						<% end %>
				  					</th>
								</tr>
							</thead>
						</table>
					</div>
		        </div>
		        <hr>


					<div class="row">
						<h3 class="text-left">
  							<span class="show-title">店長の一言</span>
  						</h3>
						<div class="comment">
							<%= @item.comment %></p>
						</div>
						<hr>
						<h3 class="text-left">
  							<span class="show-title">製品内容</span>
  						</h3>
						<div class ="disk">
							<% @item.disks.each do |disk| %>
								<p>ディスク<%= disk.disk_order %><br>
									<% disk.songs.each do |song| %>
										<p><%= song.song_order %>.<%= song.name %></p>
									<% end %>
								</p>
							<% end %>
						</div>
					</div>
						<hr>

					<div class="row">
					  <ul>
						<li class="comment-create">
		  					<h3 class="text-left comment-title">レビュー<i class="fas fa-folder-open"></i></h3>
			  				<div class="comment">
				  				<h4 class="comment-count">
		  							<%= @item.post_comments.count %>件レビュー
		  						</h4>
	  							<% @item.post_comments.each do |post_comment| %>
	  									<div class="comment-entry">
	  										<b><%= post_comment.customer.last_name %>さん</b><br>
	  				    					<%= post_comment.comment %>
	  				    				</div>
	  				    		<% end %>
	  				    	</div>
	  				    </li>
	  				</ul>
  					<hr>

					<div class="row">
							<div class="col-md-10 col-md-offset-1">
								<div class="slide-block">
								<h2 class="slide-block_text">店長のおすすめ</h2>
								<div class="slider">
									<%= image_tag "jacketby(1)", size: "100x100" %>
									<%= image_tag "jacketby(2)", size: "100x100" %>
									<%= image_tag "jacketby(3)", size: "100x100" %>
									<%= image_tag "jacketby(4)", size: "100x100" %>
									<%= image_tag "jacketby(5)", size: "100x100" %>
									<%= image_tag "jacketby (6)", size: "100x100" %>
									<%= image_tag "jacketby(7)", size: "100x100" %>
									<%= image_tag "jacketby (8)", size: "100x100" %>
									<%= image_tag "jacketby (9)", size: "100x100" %>
									<%= image_tag "jacketby(10)", size: "100x100" %>
								</div>
							</div>
							</div>
					</div>

				</div>
			</div>
		</div>

		<span id="back">
		      <a href="">
		        <%= image_tag "arrow.png", size: "30x30", class: "pull-right" %>
		      </a>
		</span>
</section>
</div>