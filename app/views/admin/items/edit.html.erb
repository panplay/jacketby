<div class="show-content">
	<section class="container-fluid clearfix">
		<h1 class="text-center">商品詳細</h1>
			<div class="row">
				<%= form_for(@item, url: admin_item_path) do |f| %>
				<div class="col-md-8 col-sm-offset-2 show-container">
					<div class="row clearfix">
						<div class="col-md-6">
							<div class="item_show">
								<div class="item_show_image">
									<%= attachment_image_tag @item, :image, size: "300x300", class: "center-block" %>
									<%= f.attachment_field :image %>
								</div>
							</div>
						</div>

						<div class="col-md-6">
							<table class="table table-striped">
								<thead>
									<tr>
										<th>シングルアルバム名</th>
										<th><%= f.text_field :name, class:"form-control", placeholder: "シングル/アルバム名" %></th>
									</tr>
									<tr>
										<th>アーティスト名</th>
										<th><%= f.collection_select :artist_id, Artist.all, :id, :name, {include_blank: "アーティスト"} %></th>
									</tr>
									<tr>
										<th>価格</th>
										<th><%= f.number_field :price,min: 1, class:"form-control", placeholder: "1000" %>
											<%= f.select :sale, Item.sales.keys.to_a, {}, {include_blank: "ステータス"} %>
										</th>
									</tr>
									<tr>
										<th>発売日</th>
										<th><%= f.date_field :release_date, class:"form-control", placeholder: "2020/12/27" %></th>
									</tr>
									<tr>
										<th>レーベル名</th>
										<th><%= f.collection_select :label_id, Label.all, :id, :name, {include_blank: "レーベル"} %></th>
									</tr>
									<tr>
										<th>カテゴリー名</th>
										<th><%= f.collection_select :category_id, Category.all, :id, :name, {include_blank: "カテゴリー"} %></th>
									</tr>
									<tr>
										<th>在庫</th>
										<th><%= @item.stock %></th>
									</tr>
								</thead>
							</table>
			        		<hr>
			        	</div>
			        </div>

						<div class="row">
							<h3 class="text-left">
	  							<span class="show-title">店長の一言</span>
	  						</h3>
								<%= f.text_area :comment, class: "form-control", placeholder: "管理者の熱いコメント", style: "width: 300px; margin-left: 30px;" %>
							<hr>
							<h3 class="text-left">
	  							<span class="show-title">製品内容</span>
	  						</h3>
							<%= f.fields_for :disks do |disk| %>
								<%= render 'disk_fields', f: disk %>
							<% end %>
							<div id="links">
							  <%= link_to_add_association 'ディスク追加',f, :disks %>
							</div>
							<%= f.submit "保存", class:"btn btn-lg btn-block btn-base-1 mt-20 bg-primary" %>
				<% end %>
						</div>
							<hr>

						<div class="row">
						  <ul>
							<li class="comment-create">
			  					<h3 class="text-left comment-title">レビュー<i class="fas fa-folder-open"></i></h3>
				  				<div class="comment">
					  				<h4 class="comment-count">
			  							<%= @item.post_comments.count %>件レビュー
			  						</h4>
		  							<% @item.post_comments.each do |post_comment| %>
		  									<div class="comment-entry">
		  										<b><%= post_comment.customer.last_name %>さん</b><br>
		  				    					<%= post_comment.comment %>
		  				    					<%= link_to "削除", customers_item_post_comment_path(@item.id,post_comment.id), method: :delete %>
		  				    				</div>
		  				    		<% end %>
		  				    	</div>
		  				    </li>
		  				  </ul>
	  					<hr>
							<div class="col-md-10 col-md-offset-1">
								<div class="slide-block">
									<h2 class="slide-block_text">店長のおすすめ</h2>
									<div class="slider">
										<%= image_tag "jacketby(1)", size: "100x100" %>
										<%= image_tag "jacketby(2)", size: "100x100" %>
										<%= image_tag "jacketby(3)", size: "100x100" %>
										<%= image_tag "jacketby(4)", size: "100x100" %>
										<%= image_tag "jacketby(5)", size: "100x100" %>
										<%= image_tag "jacketby (6)", size: "100x100" %>
										<%= image_tag "jacketby(7)", size: "100x100" %>
										<%= image_tag "jacketby (8)", size: "100x100" %>
										<%= image_tag "jacketby (9)", size: "100x100" %>
										<%= image_tag "jacketby(10)", size: "100x100" %>
									</div>
								</div>
							</div>
						</div>
				</div>
			</div>

			<span id="back">
			      <a href="">
			        <%= image_tag "arrow.png", size: "30x30", class: "pull-right" %>
			      </a>
			</span>
	</section>
</div>