<div class="contact-content">
  <div class="container clearfix">
  	<div class="row">
  		<div class="col-md-8 col-md-offset-2 contact-form">
        <% if @contact.errors.any? %>
          <%= @contact.errors.count %>件のエラー。
          <% @contact.errors.full_messages.each do |message| %>
            <%= message %>。
          <% end %>
        <% end %>
  			<h2 class="contact-title">お問い合わせフォーム</h2>
                  <%= form_for (@contact) do |f| %>
                    <%= f.label :タイトル, class:"contact-title-title" %>
                    <%= f.text_field :title, class:"form-control contact-form-form" %>
                    <%= f.label :内容, class:"contact-title-title" %>
                    <%= f.text_field :body, class:"form-control contact-form-form" %>
                    <%= f.submit "送信", class:"btn btn-lg btn-block btn-base-1 mt-20 bg-primary" %>
                  <% end %>
        </div>
    </div>
  </div>
</div>