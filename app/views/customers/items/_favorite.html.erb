<% if item.favorited_by?(current_customer) %>
	<%= link_to customers_item_favorites_path(item), method: :delete, remote: true do %>
		<i class="fa fa-heart" aria-hidden="true" style="color: red;">
			<%= item.favorites.count %>
		</i>
	<% end %>
<% else %>
	<%= link_to customers_item_favorites_path(item), method: :post, remote: true do %>
		<i class="fa fa-heart" aria-hidden="true">
			<%= item.favorites.count %>
		</i>
	<% end %>
<% end %>