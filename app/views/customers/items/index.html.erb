<section class="container">
	<div class="flash">
	  <% flash.each do |key, value| %>
	  	<%= content_tag(:div, value, class: "#{key}") %>
	  <% end %>
	<div class="row">
		<div class="sidebar, col-md-3 index-container">
			<div class="row">
				<div class="categories">
					<h2 class="categories-headline">カテゴリー</h2>
					 <div class="sidebar-contents">
					  	<% @categories.each do |category| %>
					  	 <%= link_to "/customers/category/#{category.id}" do %>
				 			<h3 style="color: black"><%= category.name %>(<%= category.items.count %>)</h3>
				 		 <% end %>
				 		 <% end %>
					</div>
				</div>
			</div>

			 <div class="content wow fadeIn" data-wow-duration="2s" data-wow-delay="2s" data-wow-offset="10" data-wow-iteration="1">
				        <a class="js-modal-open" href=""><i class="fas fa-money-bill-alt"></i> <span>Sale Item</span></a>
				    </div>
				    <div class="modal js-modal">
				        <div class="modal__bg js-modal-close"></div>
					        <div class="modal__content">
					        	<h2 class="text-center">今週のセールアイテム5選</h2>
					            <table  class="table table-hover table-inverse">
									<thead>
							 			<tr>
											<th class="col-md-1"></th>
											<th class="col-md-3">シングル/アルバム名</th>
											<th class="col-md-3">アーティスト名</th>
											<th class="col-md-2", style="color: red">セール価格</th>
										</tr>
									</thead>
									<tbody>
										<% @item_sale.each do |item| %>
										<tr>
											<td>
												<%= link_to customers_item_path(item) do %>
												<%= attachment_image_tag item, :image, size: "50x50" %>
												<% end %>
											</td>
											<td>
												<%= link_to customers_item_path(item) do %>
												<p style="color: black"><%= item.name %></p>
												<% end %>
											</td>
											<td>
												<%= item.artist.name %>
											</td>
											<td>
												<p style="color: red"><%= item.price %></p>
											</td>
										</tr>
										<% end %>
									</tbody>
								</table>
					            <a class="js-modal-close pull-right" href="">❌</a>
					        </div><!--modal__inner-->
				    </div><!--modal-->
				    <% if customer_signed_in? %>
					    <div class="contact">
					    	<%= link_to "お問い合わせはこちら", new_contact_path %>
					    </div>
					<% end %>
		</div>

			<div class="col-md-8 col-md-offset-1 index-container">
				<div class="row clearfix">
					<h2 class="new-items">新着アイテム</h2>
						<% @items.each do |item| %>
							<div class="example wow bounceInDown" data-wow-duration="0.5s" data-wow-delay="1s" data-wow-offset="10" data-wow-iteration="1">
								<div class="example_image">
									<%= link_to customers_item_path(item) do %>
										<%= attachment_image_tag item, :image, size: "150x150" %>
									<% end %>
										<div class="item_favorite_<%= item.id %>">
								             <%= render 'favorite', item: item %>
										</div>
			  			        </div>
			  					<div class="example_text">
			  						<% if item.stock == 0 %>
			  							<p class="btn btn-danger btn-xs">在庫なし</p>
			  						<% elsif item.stock <= 5 %>
			  							<p class="btn btn-warning btn-xs">残り在庫<%= item.stock %>ケ</p>
			  						<% else %>
			  							<p class="btn btn-success btn-xs">在庫あり</p>
			  						<% end %>
			  						<% if item.sale == "好評発売中" %>
			  							<p class="btn btn-info btn-xs">好評発売中</p>
			  						<% elsif item.sale == "販売停止中" %>
			  							<p class="btn btn-warning btn-xs">販売停止中</p>
			  						<% else %>
			  							<p class="btn btn-danger btn-xs">sale</p>
			  						<% end %>
						  				<%= link_to customers_item_path(item) do %>
						  					<p>シングル名：<%= truncate(item.name, length: 10) %></p>
						  				<% end %>
					  				<p>アーティスト名：<%= truncate(item.artist.name, length: 10) %></p>
					  				<p>価格（税込)：¥ <%= (item.price * 1.1).to_i %></p>
					  			</div>
							</div>
						<% end %>
				</div>

					<div class="row clearfix">
						<h2 class="new-items">いいねランキング</h2>
						<div class="responsive">
							<% @all_ranks.each.with_index(1) do |item, i| %>
								<div class="example wow bounceInDown" data-wow-duration="0.5s" data-wow-delay="1s" data-wow-offset="10" data-wow-iteration="1">
									<div class="example_image">
										<%= link_to customers_item_path(item) do %>
											<%= attachment_image_tag item, :image, size: "150x150" %>
										<% end %>
											<div class="ranking">
												<%= i %>位
											</div>
											<div class="item_favorite_<%= item.id %>">
								             <%= render 'favorite', item: item %>
											</div>
				  			        </div>
				  					<div class="example_text">
				  						<% if item.stock == 0 %>
				  							<p class="btn btn-danger btn-xs">在庫なし</p>
				  						<% elsif item.stock <= 5 %>
				  							<p class="btn btn-warning btn-xs">残り在庫<%= item.stock %>ケ</p>
				  						<% else %>
				  							<p class="btn btn-success btn-xs">在庫あり</p>
				  						<% end %>
				  						<% if item.sale == "好評発売中" %>
				  							<p class="btn btn-info btn-xs">好評発売中</p>
				  						<% elsif item.sale == "販売停止中" %>
				  							<p class="btn btn-warning btn-xs">販売停止中</p>
				  						<% else %>
				  							<p class="btn btn-danger btn-xs">sale</p>
				  						<% end %>
							  				<%= link_to customers_item_path(item) do %>
							  					<p>シングル名：<%= truncate(item.name, length: 10) %></p>
							  				<% end %>
						  				<p>アーティスト名：<%= truncate(item.artist.name, length: 10) %></p>
						  				<p>価格（税込)：¥ <%= (item.price * 1.1).to_i %></p>
						  			</div>
								</div>
							<% end %>
						</div>
					</div>

					<div class="row clearfix">
						<h2 class="new-items">一覧
							<%= link_to customers_items_index2_path do %>
							<span><i class="fas fa-arrow-alt-circle-right"></i></span>
							<% end %>
						</h2>
							<% @random.each do |item| %>
								<div class="example wow bounceInDown" data-wow-duration="0.5s" data-wow-delay="1s" data-wow-offset="10" data-wow-iteration="1">
									<div class="example_image">
										<%= link_to customers_item_path(item) do %>
											<%= attachment_image_tag item, :image, size: "150x150" %>
										<% end %>
											<div class="item_favorite_<%= item.id %>">
								             <%= render 'favorite', item: item %>
											</div>
				  			        </div>
					  					<div class="example_text">
					  						<% if item.stock == 0 %>
				  							<p class="btn btn-danger btn-xs">在庫なし</p>
				  						<% elsif item.stock <= 5 %>
				  							<p class="btn btn-warning btn-xs">残り在庫<%= item.stock %>ケ</p>
				  						<% else %>
				  							<p class="btn btn-success btn-xs">在庫あり</p>
				  						<% end %>
				  						<% if item.sale == "好評発売中" %>
				  							<p class="btn btn-info btn-xs">好評発売中</p>
				  						<% elsif item.sale == "販売停止中" %>
				  							<p class="btn btn-warning btn-xs">販売停止中</p>
				  						<% else %>
				  							<p class="btn btn-danger btn-xs">sale</p>
				  						<% end %>
							  				<%= link_to customers_item_path(item) do %>
							  					<p>シングル名：<%= truncate(item.name, length: 10) %></p>
							  				<% end %>
						  				<p>アーティスト名：<%= truncate(item.artist.name, length: 10) %></p>
						  				<p>価格（税込)：¥ <%= (item.price * 1.1).to_i %></p>
						  			</div>
								</div>
							<% end %>
					</div>

					<span id="back">
					      <a href="">
					        <%= image_tag "arrow.png", size: "30x30", class: "pull-right" %>
					      </a>
    				</span>
			</div>
	</div>
</section>