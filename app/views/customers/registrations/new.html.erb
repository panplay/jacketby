<div class="container">
    <div class="row">
       <div class="col-md-4 col-md-offset-4">
       <div id="first">
          <div class="myform form ">
            <div class="logo mb-3">
              <div class="col-md-12 text-center">
              <h2>Sign up</br>
              新規会員登録</h2>
              <h4>会員情報入力</h4>
            </div>
          </div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :address %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :パスワード（確認） %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
  
<div class="container-fluid">
  <div class="row flex-row">
  <div class="field col-md-1 ">
    <%= f.label :（姓） %><br />
  <%= f.text_field :last_name %></div>
  <div class="field col-md-1 col-md-offset-1"><%= f.label :（名） %><br />
  <%= f.text_field :first_name %></div>
</div>
</div>

  <div><%= f.label :お名前（カナ） %><br />
  <%= f.text_field :last_name_kana %></div>

  <div><%= f.label :（カナ） %><br />
  <%= f.text_field :first_name_kana %></div>

  <div><%= f.label :郵便番号（－）を入力してください %><br />
  <%= f.text_field :postal_code %></div>

  <div><%= f.label :住所 %><br />
  <%= f.text_field :address %></div>

  <div><%= f.label :電話番号（－）を入力してください %><br />
  <%= f.text_field :phone_number %></div>


  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "customers/shared/links" %>
