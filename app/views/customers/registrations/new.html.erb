<div class="sign-content">
<div class="container">
    <div class="row">
       <div class="col-md-4 col-md-offset-4">
       <div id="first">
          <div class="myform form ">
            <div class="logo mb-3">
              <div class="col-md-12 text-center">
              <h2>Sign up</br>
              新規会員登録</h2>
              <h4>会員情報入力</h4>
            </div>
          </div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group ">
    <div class="form-inline">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",rows: 7,class: "form-control",:size => "30*30" %>
  </div>
</div>

  <div class="form-group ">
    <div class="form-inline">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password",rows: 7,class: "form-control",:size => "30*30" %>
  </div>
</div>

  <div class="form-group ">
    <div class="form-inline">
    <%= f.label :パスワード（確認） %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password",rows: 7,class: "form-control",:size => "30*30" %>
  </div>
</div>

  <div class="form-group ">
    <div class="form-inline">
    <%= f.label :お名前 %><br />
  <%= f.text_field :last_name,rows: 7,class: "form-control",:size => "10*10" %>
  <%= f.text_field :first_name,rows: 7,class: "form-control",:size => "10*10" %>
</div>
</div>
  
  <div class="form-group ">
    <div class="form-inline">
  <%= f.label :お名前（カナ） %><br />
  <%= f.text_field :last_name_kana,rows: 7,class: "form-control",:size => "10*10" %>
  <%= f.text_field :first_name_kana,rows: 7,class: "form-control",:size => "10*10" %>
  </div>
  </div>

  <div class="form-group ">
    <div class="form-inline">
  <%= f.label :郵便番号（－）を入力してください %><br />
  <%= f.text_field :postal_code,rows: 7,class: "form-control" %>
 </div>
 </div>
  <div class="form-group ">
    <div class="form-inline">
  <%= f.label :住所 %><br />
  <%= f.text_area :address,rows: 7,class: "form-control",:size => "30*30" %>
</div>
</div>

  <div class="form-group ">
    <div class="form-inline">
      <%= f.label :電話番号（－）を入力してください %><br />
  <%= f.text_field :phone_number,rows: 7,class: "form-control" %>
</div>
</div>

  <div class="actions">
    <%= f.submit "会員登録",rows: 7,class: "btn-sm btn-danger form-control" %>
  </div>
<% end %>
</div>
</div>
</div>
</div>
</div>
</div>