<section class="container-post-index clearfix">
	<h1 class="index-title text-center">ショッピングカート</h1>
		<div class="row index-row">
			<div class="col-md-4 col-md-offset-6">
				<% @items.each do |item| %>
					<div class="example">
								<div class="example_image">
									<%= attachment_image_tag item, :image, size: "150x150" %>
										<div id="item_favorite">
								             <%= render 'favorite', item: item %>
										</div>
			  			        </div>
			  					<div class="example_text">
			  						<% if item.stock == 0 %>
			  							<p class="btn btn-info btn-xs">在庫なし</p>
			  						<% elsif item.stock <= 5 %>
			  							<p class="btn btn-warning btn-xs">残り在庫<%= item.stock %>ケ</p>
			  						<% else %>
			  							<p class="btn btn-success btn-xs">在庫あり</p>
			  						<% end %>
					  				<p class="btn btn-danger btn-xs"><%= item.sale %></p>
						  				<%= link_to customers_item_path(current_customer.id) do %>
						  					<p>シングル名：<%= item.name %></p>
						  				<% end %>
					  				<p>アーティスト名：<%= item.artist.name %></p>
					  				<p>価格（税込)：¥ <%= (item.price * 1.1).to_i %></p>
					  			</div>
					</div>
				<% end %>
			</div>
		</div>
</section>