<div class="cart-content">
    <section class="container">
        <h2 class="text-center">カート一覧</h2>
     	<div class="row edit-row">
     		<div class="col-md-8 col-sm-offset-2 order-container">
                <div class="row">
                    <div class="col-md-12">
         			    <% sum = 0 %>
         			    <% quantity_sum = 0 %>
                         <% if current_customer.carts.exists? %>
                            <table  class="table table-hover table-inverse">
                                <thead>
                                    <tr>
                                        <th>ジャケット</th>
                                        <th>アルバム名</th>
                                        <th>アーティスト名</th>
                                        <th>数量</th>
                                        <th>削除</th>
                                        <th>単価</th>
                                    </tr>
                                </thead>
                                <tbody>
                    				<% @carts.each do |cart| %>
                                        <tr>

                    				        <td><%= link_to(customers_item_path(cart.item.id)) do %>
                					 		        <%= attachment_image_tag cart.item, :image, class: "float-left", size: "50x50" %>
                					 		        <%= cart.item.name %>
                                                <% end %>
                                            </td>
                					 		<td><%= cart.item.artist.name %></td>
                                            <% sum += (cart.item.price * cart.quantity) %>
                                            <td><%= form_for(cart,url:customers_customer_cart_path(current_customer.id,cart.id), method: :patch) do |f| %>
                                            <%= f.select :quantity, options_for_select((1..cart.item.stock).to_a, cart.quantity) %>
                                            <%= f.submit '変更' %><% end %></td>
                                            <td><%= link_to customers_customer_cart_path(current_customer.id,cart.id), method: :delete, class: "btn btn-sm btn-link" do %>
                                                <i class="fas fa-trash-alt", style="color :black;"></i>
                                                <% end %>
                                            </td>
                					 		<td>¥ <%= (cart.item.price*1.1).to_i %></td>
                                        </tr>
                    						<% quantity_sum += cart.quantity %>
                  				    <% end %>
                                </tbody>
                            </table>

                  			<h4 class="text-right">商品の小計（<%= quantity_sum %>点）： ¥ <%= (sum*1.1).to_i %></h4>
                                <%= link_to "レジに進む", new_customers_orders_path, class:"btn btn-warning btn-block" %>
                        <% else %>
                            <h4 class="text-center">カートに商品がありません</h4>
                            <a href="/" class="btn-circle-cart pull-right cart-size">トップへ戻る</a>
                        <% end %>
                    </div>
                </div>
    		</div>
    	</div>
    </section>
</div>


