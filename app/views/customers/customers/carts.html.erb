<section class="container wear-edit">
 	<div class="row edit-row">
 		<div class="col-md-8 col-sm-offset-2">
 			<h2 class="edit-title">カート一覧</h2>
				<% @carts.each do |cart| %>
    				<% item = Item.find_by(id: cart.item_id) %>
					 		<%= attachment_image_tag item, :image, class: "book-img float-left", size: "300x300" %>
    					<p class="float-left">
    						<%= item.name %>
    						<%= form_for cart,url:"/customers/items/:item_id/carts/:id(.:format)	", method: :patch do |f| %>
                              <%= f.select :quantity, options_for_select(,{selected: cart.quantity.to_i}) %>
                              <%= f.submit "数量の変更を確定" %>
                            <% end %>
    						<%= link_to "削除", customers_item_cart_path(item.id), method: :delete,class: "btn btn-sm btn-link" %></p>
  				<% end %>
		</div>
	</div>
</section>
