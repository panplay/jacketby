<section class="container wear-edit">
 	<div class="row edit-row">
 		<div class="col-md-8 col-sm-offset-2">
 			<h2 class="edit-title">カート一覧</h2>
				<% @carts.each do |cart| %>
    				<% item = Item.find_by(id: cart.item_id) %>
					 		<%= attachment_image_tag item, :image, class: "book-img float-left", size: "300x300" %>
    					<p class="float-left">
    						<%= item.name %>

    						<%= form_for(cart,url:customers_customer_cart_path(current_customer.id,cart.id), method: :patch) do |f| %>
    						<%= f.select :quantity, options_for_select((1..item.stock).to_a, cart.quantity) %>
                            <%= f.submit '更新' %>
                            <% end %>
    						<%= link_to "削除", customers_customer_cart_path(current_customer.id,cart.id), method: :delete,class: "btn btn-sm btn-link" %></p>
  				<% end %>

            <%= link_to "レジに進む", new_customers_orders_path, class:"btn btn-warning btn-block" %>
		</div>
	</div>
</section>
